{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@/": ["./"],
      "comp/*": ["./_lib/components/*"],
      "comp": ["./_lib/components"],
      "ui/*": ["./_lib/components/ui/*"],
      "ui": ["./_lib/components/ui"],
      "utils/*": ["./_lib/utils/*"],
      "utils": ["./_lib/utils"],
      "hooks/*": ["./_lib/hooks/*"],
      "hooks": ["./_lib/hooks"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
